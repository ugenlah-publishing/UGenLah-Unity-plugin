}

.tool-icon {
    -unity-font: resource('Packages/com.ugenlah.ugenlah/Editor/UI/uss/fonts/MaterialIcons-Regular.ttf');
    -unity-font-definition: initial;
    font-size: 16px;
    color: rgba(255, 255, 255, 0.8);
    -unity-text-align: middle-center;

    align-items: center; /* 🔧 垂直居中 */
    justify-content: center; /* 🔧 水平居中 */
    -unity-text-align: middle-center; /* 🔧 文本居中对齐 */
}



.markdown-table-cell {
    padding: 8px;
    border-right-width: 1px;
    border-right-color: rgba(100, 100, 100, 0.2);
    color: rgba(255, 255, 255, 0.8);
    flex-grow: 1;

    border-color: rgba(150, 150, 150, 0.5);
    border-radius: 4px;
    font-size: 12px;
    color: rgba(255, 255, 255, 0.8);
    -unity-text-align: middle-center;
    margin-left: 8px;
}

.copy-button {
    width: 24px;
    height: 20px;
    background-color: rgba(100, 100, 100, 0.3);
    border-width: 1px;
    border-color: rgba(150, 150, 150, 0.5);
    border-radius: 4px;
    font-size: 12px;
    color: rgba(255, 255, 255, 0.8);
    -unity-text-align: middle-center;
    margin-left: 4px;
}

/* ==========================================================================
   动画定义
   ========================================================================== */

/* 闪烁动画 */
@keyframes blink {
    0% { opacity: 1; }
    50% { opacity: 0; }
    100% { opacity: 1; }
}

/* 边框脉冲动画 */
@keyframes border-pulse {
    0% { border-color: rgba(255, 255, 255, 0.3); }
    50% { border-color: rgba(79, 195, 247, 0.8); }
    100% { border-color: rgba(255, 255, 255, 0.3); }
}

/* 进度动画 */
@keyframes progress {
    0% { 
        background: linear-gradient(90deg, transparent 0%, #AB47BC 0%, transparent 0%);
    }
    50% { 
        background: linear-gradient(90deg, transparent 0%, #AB47BC 50%, transparent 50%);
    }
    100% { 
        background: linear-gradient(90deg, transparent 0%, #AB47BC 100%, transparent 100%);
    }
}

/* ==========================================================================
   响应式和状态样式
   ========================================================================== */

/* 悬停效果 */
.bubble-container:hover .content-header {
    background-color: rgba(70, 70, 70, 0.9);
}

.bubble-container:hover .collapse-button,
.bubble-container:hover .copy-button {
    background-color: rgba(120, 120, 120, 0.5);
}

/* 选中状态 */
.bubble-container:focus {
    border-color: #4FC3F7;
    border-width: 2px;
}

/* 禁用状态 */
.bubble-container:disabled {
    opacity: 0.5;
}

/* 暗色主题适配 */
.unity-theme-dark .bubble-container {
    background-color: rgba(35, 35, 35, 0.9);
}

.unity-theme-dark .code-bubble {
    background-color: rgba(25, 25, 25, 0.95);
}

.unity-theme-dark .tool-call-bubble {
    background-color: rgba(40, 25, 40, 0.95);
}

/* 浅色主题适配 */
.unity-theme-light .bubble-container {
    background-color: rgba(245, 245, 245, 0.9);
    border-color: rgba(200, 200, 200, 0.5);
}

.unity-theme-light .markdown-paragraph,
.unity-theme-light .markdown-heading {
    color: rgba(0, 0, 0, 0.8);
}

.unity-theme-light .code-text {
    color: rgba(0, 0, 0, 0.9);
    background-color: rgba(250, 250, 250, 0.95);
}

/* ==========================================================================
   实用工具类
   ========================================================================== */

.hidden {
    display: none;
}

.visible {
    display: flex;
}

.text-center {
    -unity-text-align: middle-center;
}

.text-left {
    -unity-text-align: middle-left;
}

.text-right {
    -unity-text-align: middle-right;
}

.no-margin {
    margin: 0;
}

.no-padding {
    padding: 0;
}

.full-width {
    width: 100%;
}

.full-height {
    height: 100%;
}

.flex-grow {
    flex-grow: 1;
}

.flex-shrink {
    flex-shrink: 1;
}

/* 小间距 */
.spacing-small {
    margin: 4px;
    padding: 4px;
}

/* 中等间距 */
.spacing-medium {
    margin: 8px;
    padding: 8px;
}

/* 大间距 */
.spacing-large {
    margin: 16px;
    padding: 16px;
}

/* ==========================================================================
   测试和演示按钮样式
   ========================================================================== */

/* 测试按钮样式 */
.test-content-button {
    background-color: #4CAF50;
    color: white;
    border-width: 0;
    border-radius: 6px;
    padding: 8px 16px;
    margin: 4px 0;
    font-size: 12px;
    -unity-font-style: bold;
    -unity-text-align: middle-center;
}

.test-content-button:hover {
    background-color: #45a049;
    /* Unity UIElements不支持transform: scale，使用颜色变化代替 */
}

